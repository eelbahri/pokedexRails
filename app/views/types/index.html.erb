<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type_badge(type.color, type.color) %></td>
        <td><%= link_to 'Show', type, class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_type_path(type), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Type', new_type_path, class: 'btn btn-primary' %>
<%= link_to 'Pokemons', pokemons_path, class: 'btn btn-success'%>
<%= link_to 'Attacks', moves_path, class: 'btn btn-success'%>
