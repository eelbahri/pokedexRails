<%= form_for @pokemon do |f| %>
<div class="row">
    <div class="form-group col-lg-5">
        <p>
            <%= f.label :name, 'Nom' %><br>
            <%= f.text_field :name, class:'form-control' %>
        </p>
    </div>

    <div class="form-group col-lg-5">
        <p>
            <%= f.label :number, 'Number' %><br>
            <%= f.text_field :number, class:'form-control' %>
        </p>
    </div>

    <div class="form-group col-lg-5">
        <p>
            <%= f.label :level, 'Level' %><br>
            <%= f.text_field :level, class:'form-control' %>
        </p>
    </div>

    <div class="form-group col-lg-5">
        <p>
            <%= f.label :health_points, 'Health points' %><br>
            <%= f.text_field :health_points, class:'form-control' %>
        </p>
    </div>
</div>

<p>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
</p>
<% end %>
