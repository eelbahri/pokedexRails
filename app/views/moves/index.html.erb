<p id="notice"><%= notice %></p>

<h1>Moves</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.name %></td>
        <td><%= move.description %></td>
        <td><%= move.type %></td>
        <td><%= link_to 'Show', move, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_move_path(move), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add an Attack', new_move_path, class: 'btn btn-primary' %>
<%= link_to 'Pokemons', pokemons_path, class: 'btn btn-success' %>
<%= link_to 'Types', types_path, class: 'btn btn-success' %>
